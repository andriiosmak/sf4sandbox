{% extends 'classic.html.twig' %}

{% block mainImg %}
    <div class="tm-blog-img-container tm-img-container"></div>
{% endblock %}

{% block body %}
    {% for post in posts %}
        <div class="row blog-post">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <a href="{{ path('blog_show', {'postId': post.id}) }}"><h2>{{ post.title }}</h2></a>
                </div>
                <div class="col-lg-6 post-date">
                    {{ post.createdAt.format('Y-m-d') }}
                </div>
            </div>
            <div class="col-lg-12 post-description">
                {{ post.shortContent }}
            </div>
        </div>
    {% endfor %}
{% endblock %}
